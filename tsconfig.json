{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["vitest/globals"],
    "resolveJsonModule": true
  },
  "include": ["functions/**/*.ts", "src/**/*.ts", "functions/**/*.test.ts"]
}
