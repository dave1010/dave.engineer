    {{
      renderPostHeader(title, isoDate, displayDate, topicTagLinks, topicTags, {
        type: type,
        typeLabel: typeLabel,
        typeOptions: {
          variantOverride: "border-slate-700/70 bg-slate-900/70 text-slate-200"
