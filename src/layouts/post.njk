---
layout: base.njk
---
<div class="relative px-6 pb-24 pt-10 sm:px-10">
  <article class="mx-auto flex max-w-3xl flex-col gap-12">
    <header class="relative isolate overflow-hidden rounded-[2.5rem] border border-cyan-500/20 bg-slate-950/80 p-8 clip-diagonal">
      <div class="pointer-events-none absolute inset-0 opacity-60">
        <div class="absolute -left-16 top-8 h-48 w-48 rounded-full bg-cyan-500/20 blur-3xl"></div>
        <div class="absolute -right-14 bottom-6 h-40 w-40 rotate-12 rounded-3xl border border-fuchsia-500/20"></div>
      </div>
      <div class="relative space-y-5">
        <a class="inline-flex items-center gap-2 font-tech text-xs uppercase tracking-[0.45em] text-cyan-200/80 transition hover:text-cyan-100" href="/blog/">
          <span aria-hidden="true">‚Üê</span>
          Back to archive
        </a>
        <div class="space-y-4">
          <h1 class="font-display text-4xl font-semibold text-slate-50 sm:text-5xl">{{ title }}</h1>
          <p class="font-tech text-[0.65rem] uppercase tracking-[0.45em] text-slate-400/80">
            <time datetime="{{ isoDate }}">{{ displayDate }}</time>
          </p>
        </div>
        {% if topicTags and topicTags | length %}
        <ul class="flex flex-wrap gap-2">
          {% for tag in topicTags %}
          <li class="inline-flex items-center gap-2 rounded-full border border-slate-800/70 px-3 py-1 font-tech text-[0.65rem] uppercase tracking-[0.35em] text-slate-300">
            #{{ tag }}
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
    </header>
    <div class="prose prose-invert prose-lg max-w-none rounded-3xl border border-slate-800/60 bg-slate-950/70 p-8 shadow-lg">
      {{ content | safe }}
    </div>
  </article>
</div>
