---
layout: base.njk
---
{% set redirectUrl = externalUrl %}
{% set externalSource = externalSourceInfo %}
{% set externalSourceMessage = "This post lives on another site." %}
{% if externalSource and externalSource.message %}
  {% set externalSourceMessage = externalSource.message %}
{% endif %}
{% set externalCtaLabel = "Read externally" %}
{% if externalSource and externalSource.ctaLabel %}
  {% set externalCtaLabel = externalSource.ctaLabel %}
{% endif %}
{% if redirectUrl %}
  {% set headExtra %}
    <meta http-equiv="refresh" content="0; url={{ redirectUrl | escape }}">
    <meta name="robots" content="noindex">
    <link rel="canonical" href="{{ redirectUrl | escape }}">
  {% endset %}
{% endif %}
<div class="relative px-6 pb-24 pt-10 sm:px-10">
  <article class="mx-auto flex max-w-3xl flex-col gap-12">
    <header class="relative isolate overflow-hidden rounded-[2.5rem] border border-amber-400/30 bg-slate-950/80 p-8 clip-diagonal">
      <div class="pointer-events-none absolute inset-0 opacity-60">
        <div class="absolute -left-16 top-6 h-48 w-48 rounded-full bg-amber-400/30 blur-3xl"></div>
        <div class="absolute -right-12 bottom-6 h-40 w-40 rotate-12 rounded-3xl border border-cyan-500/20"></div>
      </div>
      <div class="relative space-y-5">
        <a class="inline-flex items-center gap-2 font-tech text-xs uppercase tracking-[0.45em] text-amber-200/80 transition hover:text-amber-100" href="/blog/">
          <span aria-hidden="true">←</span>
          Back to archive
        </a>
        <div class="space-y-4">
          <h1 class="font-display text-4xl font-semibold text-slate-50 sm:text-5xl">{{ title }}</h1>
          <p class="font-tech text-[0.65rem] uppercase tracking-[0.45em] text-amber-100/80">
            <time datetime="{{ isoDate }}">{{ displayDate }}</time>
          </p>
        </div>
        {% if topicTags and topicTags | length %}
        <ul class="flex flex-wrap gap-2">
          {% for tag in topicTags %}
          <li class="inline-flex items-center gap-2 rounded-full border border-amber-400/40 px-3 py-1 font-tech text-[0.65rem] uppercase tracking-[0.35em] text-amber-100/80">
            #{{ tag }}
          </li>
          {% endfor %}
        </ul>
        {% endif %}
      </div>
    </header>
    <div class="space-y-6 rounded-3xl border border-amber-400/40 bg-amber-500/10 p-8 text-amber-100 shadow-lg">
      <p class="text-lg font-semibold">{{ externalSourceMessage }}</p>
      <p class="text-base text-amber-50/80">
        {% if excerpt %}
          {{ excerpt }}
        {% else %}
          You're being redirected to read it there.
        {% endif %}
      </p>
      {% if redirectUrl %}
      <a
        class="inline-flex items-center gap-2 rounded-full border border-amber-300/60 bg-amber-400/20 px-5 py-2 font-tech text-[0.7rem] uppercase tracking-[0.35em] text-amber-50 transition hover:bg-amber-400/30"
        href="{{ redirectUrl }}"
        rel="noopener noreferrer"
        target="_blank"
      >
        {{ externalCtaLabel }}
        <span aria-hidden="true">↗</span>
      </a>
      {% endif %}
    </div>
    {% if content | trim %}
    <div class="prose prose-invert prose-lg max-w-none rounded-3xl border border-slate-800/60 bg-slate-950/70 p-8 shadow-lg">
      {{ content | safe }}
    </div>
    {% endif %}
  </article>
</div>
