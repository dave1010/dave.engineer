---json
{
  "permalink": "feed.xml",
  "eleventyExcludeFromCollections": true,
  "metadata": {
    "title": "Dave Hulbert - Blog",
    "description": "Long-form writing, essays, experiments, and Today I Learned notes.",
    "language": "en",
    "base": "https://dave.engineer/",
    "author": {
      "name": "Dave Hulbert"
    }
  }
}
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xml:base="{{ metadata.base | addPathPrefixToFullUrl }}" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ metadata.title }}</title>
    <link>{{ metadata.base | addPathPrefixToFullUrl }}</link>
    <atom:link href="{{ permalink | htmlBaseUrl(metadata.base) }}" rel="self" type="application/rss+xml" />
    <description>{{ metadata.description }}</description>
    <language>{{ metadata.language or page.lang }}</language>
    <lastBuildDate>{{ collections.blogFeed | getNewestCollectionItemDate | dateToRfc822 }}</lastBuildDate>
    {% for post in collections.blogFeed %}
    {% set canonicalUrl = post.data.externalUrl or post.url %}
    {% set absolutePostUrl = canonicalUrl | htmlBaseUrl(metadata.base) %}
    <item>
      <title>{{ post.data.title }}</title>
      <link>{{ absolutePostUrl }}</link>
      <description><![CDATA[{{ post.content | renderTransforms(post.data.page, metadata.base) | safe }}]]></description>
      <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
      <dc:creator>{{ metadata.author.name }}</dc:creator>
      <guid>{{ absolutePostUrl }}</guid>
    </item>
    {% endfor %}
  </channel>
</rss>
