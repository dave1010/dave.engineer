  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const parallaxRoot = document.querySelector('[data-parallax-root]');
      if (parallaxRoot) {
        const layers = Array.from(parallaxRoot.querySelectorAll('[data-depth]'));
        let pointerX = 0;
        let pointerY = 0;

        const animateLayers = () => {
          const scrollOffset = window.scrollY || 0;
          layers.forEach((layer) => {
            const depth = Number.parseFloat(layer.dataset.depth || '0');
            const translateX = pointerX * depth * 20;
            const translateY = pointerY * depth * 20 + scrollOffset * depth * 0.04;
            layer.style.transform = `translate3d(${translateX}px, ${translateY}px, 0)`;
          });
          requestAnimationFrame(animateLayers);
        };
        animateLayers();

        parallaxRoot.addEventListener('pointermove', (event) => {
          const rect = parallaxRoot.getBoundingClientRect();
          pointerX = ((event.clientX - rect.left) / rect.width - 0.5) * 2;
          pointerY = ((event.clientY - rect.top) / rect.height - 0.5) * 2;
        });
      }

      const canvas = document.getElementById('hero-grid');
      if (canvas && window.THREE) {
        const measure = () => {
          const rect = canvas.getBoundingClientRect();
          return {
            width: Math.floor(rect.width || canvas.offsetWidth || canvas.width),
            height: Math.floor(rect.height || canvas.offsetHeight || canvas.height),
          };
        };
        const initialSize = measure();
        if (initialSize.width < 2 || initialSize.height < 2) {
          return;
        }

        const scene = new THREE.Scene();
        scene.fog = new THREE.FogExp2(0x050915, 0.18);

        const camera = new THREE.PerspectiveCamera(45, initialSize.width / initialSize.height, 0.1, 100);
        camera.position.set(0, 0, 6);

        const renderer = new THREE.WebGLRenderer({ canvas, alpha: true, antialias: true });
        renderer.setSize(initialSize.width, initialSize.height);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 1.8));

        const geometry = new THREE.IcosahedronGeometry(2.1, 1);
        const material = new THREE.MeshStandardMaterial({
          color: 0x22d3ee,
          emissive: 0x0a1f2f,
          roughness: 0.2,
          metalness: 0.7,
          wireframe: true,
        });
        const mesh = new THREE.Mesh(geometry, material);
        scene.add(mesh);

        const innerGeometry = new THREE.OctahedronGeometry(1.1, 0);
        const innerMaterial = new THREE.MeshStandardMaterial({
          color: 0xf472b6,
          emissive: 0x25031a,
          roughness: 0.3,
          metalness: 0.6,
          transparent: true,
          opacity: 0.65,
        });
        const innerMesh = new THREE.Mesh(innerGeometry, innerMaterial);
        scene.add(innerMesh);

        const ambient = new THREE.AmbientLight(0x66f7ff, 0.6);
        const rimLight = new THREE.PointLight(0xf472b6, 1.4, 12, 2);
        rimLight.position.set(-3, 4, 4);
        scene.add(ambient, rimLight);

        const resize = () => {
          const next = measure();
          if (next.width && next.height) {
            camera.aspect = next.width / next.height;
            camera.updateProjectionMatrix();
            renderer.setSize(next.width, next.height);
          }
        };
        resize();

        window.addEventListener('resize', () => {
          resize();
        });

        const clock = new THREE.Clock();
        const animate = () => {
          const elapsed = clock.getElapsedTime();
          mesh.rotation.x = elapsed * 0.25;
          mesh.rotation.y = elapsed * 0.32;
          innerMesh.rotation.x = elapsed * -0.18;
          innerMesh.rotation.y = elapsed * 0.28;
          rimLight.intensity = 1.1 + Math.sin(elapsed * 1.4) * 0.3;
          renderer.render(scene, camera);
          requestAnimationFrame(animate);
        };
        animate();
      }
    });
  </script>
